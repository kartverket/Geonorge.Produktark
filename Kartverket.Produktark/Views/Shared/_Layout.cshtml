<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="options-wrapper">
        <div class="container">
            <p class="top-header">Norges geografiske infrastruktur - Norge Digitalt</p>
        </div>
    </div>
    <div class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Meny</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand"><img class="logo" src="@Url.Content("~/Content/kartverket_logo.png")" alt="Kartverket logo" width="117" height="39" /></span>
            </div>
            <div class="collapse navbar-collapse">

                <ul class="nav navbar-nav">
                    <li class="divider-vertical"></li>
                    <li><a href="">Produktarkgenerator</a></li>
                </ul>

                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li class="divider-vertical"></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administrasjon <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="">Logg av</a></li>
                            </ul>
                        </li>
                    </ul>
                }

                <ul class="nav navbar-nav navbar-right">
                    <li><a target="_blank" href="http://www.geonorge.no">Geonorge forside</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="body-content">
        <div class="container">

            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger"><p>@TempData["error"]</p></div>
            }

            @RenderBody()
        </div>
    </div>
    <div class="container">
        <footer>
            <!--
            @if (User.Identity.IsAuthenticated)
            {
                foreach (var c in System.Security.Claims.ClaimsPrincipal.Current.Claims)
                {
                    <p>@c.Type = @c.Value</p>
                }
            }
            -->
           
            <p>&copy; @DateTime.Now.Year - Kartverket</p>

        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
