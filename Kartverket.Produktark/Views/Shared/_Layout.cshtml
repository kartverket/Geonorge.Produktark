@using System.Security.Claims
@using Kartverket.Produktark.Models
@using Kartverket.Produktark.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Fonts: -->
    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,400italic,600,700" rel="stylesheet" type="text/css">
    <link href="//fonts.googleapis.com/css?family=Raleway:400,100,300,500,600,700" rel="stylesheet" type="text/css">

    <!-- Shared menu: -->
    <link href="@Html.KartkatalogUrl()bundles/shared-menu-styles" rel="stylesheet" type="text/css">

    <!-- Main css: -->
    <link href="@Html.KartkatalogUrl()Content/css" rel="stylesheet" type="text/css">

    <!-- Themes css: -->
    <link href="@Html.KartkatalogUrl()Content/themes/base/css" rel="stylesheet" type="text/css">

    <!-- Download: -->
    <link href="@Html.KartkatalogUrl()Content/download" rel="stylesheet" type="text/css">


    <!-- Scripts -->
    <script src="@Html.KartkatalogUrl()Scripts/easyXDM.js" type="text/javascript"></script>
    <script src="@Html.KartkatalogUrl()bundles/jquery"></script>
    <script src="@Html.KartkatalogUrl()bundles/modernizr"></script>
    <script src="@Html.KartkatalogUrl()bundles/shared-menu-scripts"></script>
    <script src="@Html.KartkatalogUrl()bundles/bootstrap"></script>
    <script src="@Html.KartkatalogUrl()bundles/js"></script>
    @Html.Partial("_Analytics")
</head>

<body class="geonorge-container prototype  geonorge ng-scope" ng-app="geonorge">

    @Html.Partial("_SharedMenu")

    <div class="body-content">
        <div class="container">
            <ol class="breadcrumb">
                <li><a href="@Html.GeonorgeUrl()">Geonorge</a></li>
                <li><a href="/">Produktark</a></li>
                @RenderSection("breadcrumb", false)
            </ol>
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger"><p>@TempData["error"]</p></div>
            }

            @RenderBody()
        </div>
    </div>
    <footer class="page-footer">
        <div class="container container-footer">
            <div>
                <div class="block editorialblock col-md-12 col-lg-4  ">

                    <p><img alt="" src="@Html.KartkatalogUrl()Content/img/geonorge.png" height="87" width="381" /></p>
                    <small>Versjon @Html.ApplicationVersionNumber()</small>
                    <!--<p><a href="/Om-Kartverket/Personvern-og-cookies/"> Personvern og cookies </a></p>-->
                    <!--
                    @if (User.Identity.IsAuthenticated)
                    {
                        foreach (var c in System.Security.Claims.ClaimsPrincipal.Current.Claims)
                        {
                            <p>@c.Type = @c.Value</p>
                        }
                    }
                    -->
                    <ul class="editorialblock-list-item"></ul>
                </div><div class="block editorialblock col-md-12 col-lg-4  ">

                    <h2>Om nettstedet:</h2>

                    <ul class="editorialblock-list-item">
                        <li>
                            <a href="@Html.GeonorgeUrl()informasjon/om-geonorge/">Om Geonorge</a>
                        </li>
                        <li>
                            <a href="@Html.GeonorgeUrl()informasjon/aktuelt/annet/personvern-og-bruk-av-cookies/">Personvern og bruk av cookies</a>
                        </li>
                    </ul>
                </div><div class="block editorialblock col-md-12 col-lg-4  ">

                    <h2>Kontakt</h2>
                    <p><span style="font-family: 'Open Sans', sans-serif; font-size: 22px;">Telefon: 08700<br /></span>Fra utlandet: +47 32 11 81 21<br /><a title="post@geonorge.no" href="mailto:post@geonorge.no">post@geonorge.no</a><br />Org. nr.: 971 040 238</p>
                    <hr />
                    <p>En løsning fra</p>
                    <p><img alt="" src="@Html.KartkatalogUrl()Content/img/kartverket.png" height="75" width="195" /></p>
                    <ul class="editorialblock-list-item"></ul>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

    </html>
